# VMware Inventory Dashboard - Docker Compose Configuration
# Copy this file to .env and adjust values as needed

# Application Configuration
APP_VERSION=0.6.1
CONTAINER_NAME=vmware-inventory-dashboard

# Network Configuration
HOST_PORT=8501
CONTAINER_PORT=8501

# Database Configuration
DB_PATH=/app/data/vmware_inventory.db
VMWARE_INV_DB_URL=sqlite:///data/vmware_inventory.db

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# Resource Limits
CPU_LIMIT=2.0
CPU_RESERVATION=0.5
MEMORY_LIMIT=2G
MEMORY_RESERVATION=512M

# Logging Configuration
LOG_MAX_SIZE=50m
LOG_MAX_FILE=5
LOG_COMPRESS=true

# Health Check Configuration
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=40s

# Restart Policy
RESTART_POLICY=unless-stopped
