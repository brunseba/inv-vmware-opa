# VMware Inventory Dashboard - Full Variant Configuration
APP_VERSION=v0.8.0
CONTAINER_NAME=vmware-inventory-dashboard-full
DOCKERFILE=Dockerfile.full
IMAGE_TAG=full

# Build metadata
BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
VCS_REF=$(git rev-parse --short HEAD 2>/dev/null || echo "unknown")

# Network Configuration (different port to avoid conflicts)
HOST_PORT=8502
CONTAINER_PORT=8501

# Database Configuration
DB_PATH=/app/data/vmware_inventory.db
VMWARE_INV_DB_URL=sqlite:///data/vmware_inventory.db

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# Resource Limits (Full variant - needs more memory for PyGWalker)
CPU_LIMIT=2.5
CPU_RESERVATION=0.75
MEMORY_LIMIT=3G
MEMORY_RESERVATION=1G

# Logging Configuration
LOG_MAX_SIZE=50m
LOG_MAX_FILE=5
LOG_COMPRESS=true

# Health Check Configuration
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=40s

# Restart Policy
RESTART_POLICY=unless-stopped
